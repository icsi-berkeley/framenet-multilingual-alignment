{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Europarl to fastalign",
      "type": "python",
      "request": "launch",
      "program": "${cwd}/alignment/bertalign/europarl_to_fastalign.py",
      "console": "integratedTerminal",
      "args": [
        "es"
      ]
    },
    {
      "name": "Create alignment data",
      "type": "python",
      "request": "launch",
      "program": "${cwd}/alignment/bertalign/create_alignment_data.py",
      "console": "integratedTerminal",
      "args": [
        "--input_sentence_file=${cwd}/data/europarl/es-en/fastalign-europarl.es-en",
        "--input_mapping_file=${cwd}/data/europarl/es-en/fastalign-europarl.es-en.intersect.align",
        "--vocab_file=${cwd}/models/multi_cased_L-12_H-768_A-12/vocab.txt",
        "--bert_config_file=${cwd}/models/multi_cased_L-12_H-768_A-12/bert_config.json",
        "--init_checkpoint=${cwd}/models/multi_cased_L-12_H-768_A-12/bert_model.ckpt",
        "--output_file=${cwd}/data/bert/256-50000-12345-fastalign-europarl.es-en.tfrecord",
        "--layers=-1",
        "--do_lower_case=False",
        "--max_seq_length=256",
        "--sample_size=50000",
        "--random_seed=12345"
      ]
    },
    {
      "name": "Run alignment",
      "type": "python",
      "request": "launch",
      "program": "${cwd}/alignment/bertalign/run_alignment.py",
      "console": "integratedTerminal",
      "args": [
        "--input_file=${cwd}/data/bert/256-50000-12345-fastalign-europarl.es-en.tfrecord",
        "--output_dir=${cwd}/alignment_output",
        "--do_train=True",
        // "--do_eval=True",
        "--bert_config_file=${cwd}/models/multi_cased_L-12_H-768_A-12/bert_config.json",
        "--init_checkpoint=${cwd}/models/multi_cased_L-12_H-768_A-12/bert_model.ckpt",
        "--train_batch_size=2",
        "--max_seq_length=256",
        "--num_train_steps=25000",
        "--num_warmup_steps=2500",
        "--learning_rate=5e-5",
        "--lambda_coef=1"
      ]
    },
    {
      "name": "Create LU vectors",
      "type": "python",
      "request": "launch",
      "program": "${cwd}/alignment/create_lu_vectors.py",
      "console": "integratedTerminal",
      "args": [
        "spanishfn",
        "es",
        "/home/arthur/Projects/framenet-multilingual-alignment/models/50k_es_multi_aligned_cased_L-12_H-768_A-12/vocab.txt"
      ]
    },
    {
      "name": "Main FrameNet alignment",
      "type": "python",
      "request": "launch",
      "program": "${cwd}/alignment/main.py",
      "console": "integratedTerminal"
    }
  ]
}
